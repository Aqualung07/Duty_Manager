{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 18",
	
	"compilerOptions": {
		"lib": ["ES6"],
		"module": "Node16",
		"target": "ES6",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node16",
		"resolveJsonModule": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}